{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "ignoreRestSiblings": true
    }],
    "no-redeclare": "off"
  },
  "overrides": [
    {
      "files": ["src/types/**/*.ts"],
      "rules": {
        "no-redeclare": "off"
      }
    },
    {
      "files": ["src/adapters/base-database-adapter.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
